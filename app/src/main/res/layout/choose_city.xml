<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.WeatherApp.SecondAppBar"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="130dp"
    android:padding="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filledCity"
        style="@style/TextInputLayoutStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_city"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterCity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/enter_your_city"
            android:textColor="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/search_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/switch_back_to_show_city"

        android:padding="5dp"
        android:src="@drawable/ic_baseline_search_24" />

    <ImageView
        android:id="@+id/enable_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/switch_back_to_show_city"

        android:padding="5dp"
        android:src="@drawable/ic_baseline_gps_fixed_24" />

    <ImageView
        android:id="@+id/open_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/switch_back_to_show_city"

        android:padding="5dp"
        android:src="@drawable/ic_baseline_map_24" />

    <ImageView
        android:id="@+id/btn_switch_to_show_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:contentDescription="@string/switch_back_to_show_city"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />


</LinearLayout>



